class Block:
    def __init__(self, blockType):
        self.blockType = blockType

    def __call__(self, blockType):
        return print(self.blockGrid(self.blockType))

    def blockGrid(self, blockType):
        x = []
        gridB = []
        for i in range(3):
            x.append(blockType)
        for i in range(3):
            gridB.append(x)
        return gridB
        

def createGrid(grid):
    rows = []
    board = []
    for x in range(len(grid[0])):
        rows.append(0)
    for y in range(len(grid)):
        board.append(rows)
    for a in range(len(grid)):
        for b in range(len(grid[0])):
            board[a][b] = Block(grid[a][b])
    return board

